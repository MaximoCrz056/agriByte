
---
interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<div class:list={["relative h-12 w-12", className]}>
  <svg 
    class="absolute h-full w-full animate-pulse-slow" 
    viewBox="0 0 50 50" 
    fill="none" 
    xmlns="http://www.w3.org/2000/svg"
  >
    <circle 
      cx="25" 
      cy="25" 
      r="20" 
      stroke="currentColor" 
      stroke-width="1.5" 
      stroke-linecap="round" 
      stroke-dasharray="1 3" 
      class="animate-rotate-slow" 
    />
    <circle 
      cx="25" 
      cy="25" 
      r="15" 
      fill="currentColor" 
      fill-opacity="0.1" 
      class="animate-pulse-slow" 
    />
    <circle 
      cx="25" 
      cy="25" 
      r="8" 
      fill="currentColor" 
      fill-opacity="0.6" 
    />
  </svg>
</div>
