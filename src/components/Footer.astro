
---
import AnimatedLogo from './AnimatedLogo.astro';
import { Icon } from 'astro-icon/components';

const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: "Products",
    links: [
      { label: "Control Systems", href: "#control-systems" },
      { label: "Sensors", href: "#sensors" },
      { label: "Automation", href: "#automation" },
      { label: "Software", href: "#software" }
    ]
  },
  {
    title: "Company",
    links: [
      { label: "About", href: "#about" },
      { label: "Team", href: "#team" },
      { label: "Careers", href: "#careers" },
      { label: "Contact", href: "#contact" }
    ]
  },
  {
    title: "Resources",
    links: [
      { label: "Blog", href: "#blog" },
      { label: "Knowledge Base", href: "#knowledge" },
      { label: "Case Studies", href: "#case-studies" },
      { label: "Support", href: "#support" }
    ]
  }
];

const socialLinks = [
  { icon: "lucide:twitter", label: "Twitter", href: "#twitter" },
  { icon: "lucide:instagram", label: "Instagram", href: "#instagram" },
  { icon: "lucide:linkedin", label: "LinkedIn", href: "#linkedin" },
  { icon: "lucide:youtube", label: "YouTube", href: "#youtube" }
];
---

<footer class="relative py-16 overflow-hidden border-t border-border">
  <div class="absolute top-0 left-1/4 w-64 h-64 bg-accent/5 rounded-full blur-3xl -z-10"></div>
  <div class="absolute bottom-0 right-0 w-64 h-64 bg-primary/5 rounded-full blur-3xl -z-10"></div>

  <div class="section-container">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-10 mb-10">
      <!-- Branding and Introduction -->
      <div class="md:col-span-5 lg:col-span-4">
        <a href="/" class="flex items-center space-x-2 mb-5">
          <AnimatedLogo className="h-9 w-9 text-primary" />
          <span class="font-semibold text-xl tracking-tight">agriByte</span>
        </a>
        <p class="text-muted-foreground mb-5 max-w-md">
          Revolutionizing agriculture with smart greenhouse technology for increased yield, sustainability, and efficiency.
        </p>
        <div class="flex space-x-4">
          {socialLinks.map((link) => (
            <a 
              href={link.href}
              class="flex items-center justify-center w-10 h-10 rounded-full text-muted-foreground hover:text-accent transition-colors"
              aria-label={link.label}
            >
              <Icon name={link.icon} size={20} />
            </a>
          ))}
        </div>
      </div>

      <!-- Footer Links -->
      {footerLinks.map((section) => (
        <div class="md:col-span-2 lg:col-span-2">
          <h4 class="font-medium text-lg mb-5">{section.title}</h4>
          <ul class="space-y-3">
            {section.links.map((link) => (
              <li>
                <a href={link.href} class="text-muted-foreground hover:text-accent transition-colors">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}

      <!-- Newsletter Signup -->
      <div class="md:col-span-3 lg:col-span-4">
        <h4 class="font-medium text-lg mb-5">Stay Updated</h4>
        <p class="text-muted-foreground mb-4">
          Get the latest updates on smart agriculture technology and exclusive offers.
        </p>
        <form class="flex flex-col sm:flex-row gap-2">
          <input 
            type="email" 
            placeholder="Enter your email" 
            class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
            required
          />
          <button 
            type="submit"
            class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>

    <!-- Bottom Footer -->
    <div class="pt-8 mt-8 border-t border-border/50 flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
      <p class="text-sm text-muted-foreground">
        Â© {currentYear} agriByte. All rights reserved.
      </p>
      <div class="flex space-x-6 text-sm text-muted-foreground">
        <a href="#privacy" class="hover:text-accent transition-colors">Privacy Policy</a>
        <a href="#terms" class="hover:text-accent transition-colors">Terms of Service</a>
        <a href="#cookies" class="hover:text-accent transition-colors">Cookie Policy</a>
      </div>
    </div>
  </div>
</footer>
