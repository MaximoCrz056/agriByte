
---
import { Icon } from 'astro-icon/components';

const features = [
  {
    icon: 'lucide:thermometer',
    title: "Climate Control",
    description: "Precision temperature and humidity regulation for optimal growing conditions."
  },
  {
    icon: 'lucide:droplets',
    title: "Smart Irrigation",
    description: "Automated watering systems that conserve resources while maximizing plant health."
  },
  {
    icon: 'lucide:sun',
    title: "Light Management",
    description: "Intelligent LED systems that mimic natural light cycles for enhanced growth."
  },
  {
    icon: 'lucide:activity',
    title: "Real-time Monitoring",
    description: "Continuous tracking of all environmental parameters with instant alerts."
  },
  {
    icon: 'lucide:bar-chart',
    title: "Data Analytics",
    description: "Advanced insights to optimize growing conditions and increase yield."
  },
  {
    icon: 'lucide:smartphone',
    title: "Remote Control",
    description: "Manage your greenhouse from anywhere through our intuitive mobile app."
  }
];
---

<section id="features" class="py-24 relative">
  <!-- Background elements -->
  <div class="absolute top-1/3 right-0 w-72 h-72 bg-accent/5 rounded-full blur-3xl -z-10"></div>
  <div class="absolute bottom-1/4 left-0 w-80 h-80 bg-primary/5 rounded-full blur-3xl -z-10"></div>
  
  <div class="section-container">
    <div class="scroll-reveal max-w-2xl mx-auto text-center mb-16">
      <div class="inline-block px-3 py-1 mb-4 text-xs font-medium text-accent bg-accent/10 rounded-full">
        Features
      </div>
      <h2 class="text-3xl md:text-4xl font-bold mb-6 tracking-tight">
        Comprehensive greenhouse management
      </h2>
      <p class="text-muted-foreground text-lg">
        Our integrated suite of smart technologies works in harmony to create the perfect growing environment for your crops.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {features.map((feature, index) => (
        <div class="scroll-reveal h-full" data-delay={100 + index * 50} data-direction="up">
          <div class:list={[
            "h-full p-8 rounded-3xl transition-all duration-300 hover:shadow-md",
            "border border-border/50 bg-background hover:bg-secondary/50",
            index === 0 ? "md:col-span-2 lg:col-span-1" : ""
          ]}>
            <div class="mb-5 inline-flex items-center justify-center w-12 h-12 rounded-2xl bg-primary/10 text-primary">
              <Icon name={feature.icon} size={24} />
            </div>
            <h3 class="text-xl font-semibold mb-3">{feature.title}</h3>
            <p class="text-muted-foreground">{feature.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
